{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "lib": ["es2015"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@compositions": ["./src/compositions"],
      "@compositions/*": ["./src/compositions/*"]
    }
  },
  "exclude": ["remotion.config.ts"]
}
